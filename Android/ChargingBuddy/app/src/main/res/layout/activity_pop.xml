<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_activity"
    tools:context=".PopActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/textViewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TableRow
                android:id="@+id/ttr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/tl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/station"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/slot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_rounded"
                        android:text="Slot 1"
                        android:textAlignment="center"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/slot1_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/slot1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_margin="5dp"
                    android:background="@drawable/station"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/slot2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_rounded"
                        android:text="Slot 2"
                        android:textAlignment="center"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/slot2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/slot2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/dtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/dl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/station"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/slot3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_rounded"
                        android:text="Slot 3"
                        android:textAlignment="center"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/slot3_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/slot3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_margin="5dp"
                    android:background="@drawable/station"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/slot4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_rounded"
                        android:text="Slot 4"
                        android:textAlignment="center"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/slot4_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/slot4_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textAlignment="center" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>